@using Template_RealEstate_20052019.Models
@model Template_RealEstate_20052019.Models.GridModel<Article>


<section class="padding-15 container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-xs-4 col-lg-offset-10 col-md-offset-10 col-md-offset-10">
                            <a href="@Url.Action("Edit", "Policy", new { Area="Backend"})" type="button" class="btn btn-block btn-primary">Thêm</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách chính sách</h3>
                </div>
                <div class="box-body">
                    <div class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th class="col-lg-1">Id</th>
                                            <th class="col-lg-3">Tiêu đề</th>
                                            <th class="col-lg-5">Sapo</th>
                                            <th class="col-lg-2">Ngày tạo</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model?.Data != null && Model.Data.Any())
                                        {
                                            foreach (var item in Model.Data)
                                            {
                                                <tr role="row">
                                                    <td>@item.ArticleId</td>
                                                    <td>@item.ArticleTitle</td>
                                                    <td>@item.Sapo</td>
                                                    <td>@item.CreatedDate.ToString("dd-MM-yyyy")</td>
                                                    <td>
                                                        <a href="@Url.Action("Edit", "Policy", new { Area="Backend", itemId = item.ArticleId})">Sửa</a>
                                                        <a href="#" onclick="return confirmDelete($(this));" data-url="@Url.Action("Delete", "Policy", new { Area="Backend", itemId = item.ArticleId})">Xóa</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Id</th>
                                            <th>Tiêu đề</th>
                                            <th>Sapo</th>
                                            <th>Ngày tạo</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-7 col-sm-offset-5">
                                @Html.Raw(Model.GeneratePagination())
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>